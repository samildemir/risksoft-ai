# İlk olarak, temel imajı belirleyin
ARG PYTHON_VERSION=3.11
FROM python:${PYTHON_VERSION}-slim AS base

# Çalışma dizinini ayarlayın
WORKDIR /app/ai-server

# Install system dependencies including build tools for psutil
RUN apt-get update && \
    apt-get install -y \
    gcc \
    g++ \
    python3-dev \
    libmagic1 \
    antiword \
    && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
    
RUN --mount=type=cache,target=/root/.cache/pip \
    python -m pip install --upgrade pip && \
    python -m pip install -r requirements.txt

# Uygulama kodunu kopyalayın
COPY . .

# Uygulamanın hangi portu dinleyeceğini belirtin
EXPOSE 8082

# Uygulamayı başlatın
CMD ["uvicorn", "main:app", "--host=0.0.0.0", "--port=8082", "--reload", "--reload-dir", "/app/ai-server"]

